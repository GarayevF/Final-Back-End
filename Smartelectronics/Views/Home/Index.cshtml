@model HomeVM
@{
    ViewData["Title"] = "Index";
    List<LoanRange> loanRanges = ViewBag.LoanRanges;
}

@inject ILayoutService layoutService

@{
    IEnumerable<Category> categories = await layoutService.GetCategories();
    //List<BasketVM> basketVMs = await layoutService.GetBaskets();
    //List<WishlistVM> wishlistVMs = await layoutService.GetWishLists();
    //List<CompareVM> compareVMs = await layoutService.GetCompares();
}

<main class="main-home">
    <div class="main-content">
        <div class="container">
            <div class="row">
                <div class="left col-xxl-3 col-xl-3-5 col-lg-3-5 d-md-none d-none d-lg-block d-xl-block d-xxl-block">
                    <ul class="main-category-list">
                        @foreach (Category category in categories)
                        {
                            <li class="category-item">
                                <div class="category-title">
                                    <i class="fa-solid fa-mobile-screen-button"></i>
                                    <span>@category.Name</span>
                                </div>
                                <div class="category-content">
                                    <div class="content-products">
                                        @if (category.Children != null && category.Children.Count() > 0)
                                        {
                                            @foreach (Category child in category.Children)
                                            {
                                                <ul class="content-product-list">
                                                    <a class="content-header">@child.Name</a>
                                                    @if (child.Brands != null && child.Brands.Count() > 0)
                                                    {
                                                        @foreach (Brand brand in child.Brands)
                                                        {
                                                            <li class="content-body"><a class="content-body-link">@brand.Name</a></li>
                                                        }
                                                    }

                                                </ul>
                                            }

                                        }

                                    </div>
                                </div>
                            </li>
                        }

                    </ul>
                </div>
                <div class="right col-xxl-9 col-xl-8-5 col-lg-8-5 col-md-12">
                    <div class="owl-carousel owl-one">
                        <div>
                            <a href="">
                                <img src="/assets/images/sliders/slider-1.jpg" alt="">
                            </a>
                        </div>
                        <div>
                            <a href="">
                                <img src="/assets/images/sliders/slider-2.jpg" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="wish-container">
                        <a class="wish-box" href="">
                            <img src="/assets/images/kampaniyalar/wish-card-1.png" alt="">
                        </a>
                        <a class="wish-box" href="">
                            <img src="/assets/images/kampaniyalar/wish-card-2.png" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="product-types-boxes">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-6">
                    <button class="type-box selected-box" data-origin="1">
                        <div class="type-box-content">
                            <img src="/assets/images/product-types/new-blue.png" alt="">
                            <span>Yeni Məhsullar</span>
                        </div>
                    </button>
                </div>
                <div class="col-lg-3 col-md-3 col-6">
