<div class="wish-dropdown">
    <div class="wish-content-top">
        <p>Seçilmişlər</p>
    </div>
    <div class="wish-content">
        @if(Model != null && Model.Count() > 0)
        {
            @foreach (WishlistVM wishlistVM in Model)
            {
                <div class="content-cards-div">
                    <div class="wish-card">
                        <div class="wish-image-div">
                            <img class="wish-image" src="~/assets/images/products/@wishlistVM.ProductColors?.FirstOrDefault()?.Image" alt="">
                        </div>
                        <div class="wish-card-info">
                            <div class="wish-card-top">
                                <div class="wish-card-title">
                                    <p>@wishlistVM.BrandName</p>
                                    <span>@wishlistVM.Title</span>
                                </div>
                                <div class="wish-card-delete-btn">
                                    <a asp-controller="wishlist" asp-action="deletewishlist" asp-route-id="@wishlistVM.Id" class="deletewish">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                    
                                </div>
                            </div>
                            <div class="wish-card-bottom">
                                <span>@(wishlistVM.DiscountedPrice > 0 ? wishlistVM.DiscountedPrice : wishlistVM.Price) <small>AZN</small></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        <div class="content-direction">
            <a asp-controller="wishlist" asp-action="index" class="wish-go-summary">Seçilmişlərə get</a>
        </div>
    </div>
</div>