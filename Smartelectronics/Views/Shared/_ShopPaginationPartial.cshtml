                    <ul class="label-set">
                        @if (product.DiscountedPrice > 0)
                        {
                            <li class="circle label-blue">
                                <div class="label">
                                    <p>Nağd alışlarda</p>
                                    <h6>Endirim</h6>
                                    <div class="price">
                                        <p>
                                            <span>@(product.Price - product.DiscountedPrice)</span>AZN
                                        </p>
                                    </div>
                                </div>
                            </li>
                        }
                        @if (product.LoanTerms != null && product.LoanTerms.Count() > 0)
                        {
                            @foreach (LoanTerm loanTerm in product.LoanTerms)
                            {
                                <li class="circle label-red" style="background-image: url(/assets/images/@loanTerm.LoanCompany?.LabelImage);">
                                    <div class="label">
                                        <p class="text-lg">@loanTerm.LoanTermLoanRanges?.Max(t => t.LoanRange.Range) ay</p>
                                        <p class="text-sm">Faizsiz Kredit</p>
                                    </div>
                                </li>
                            }
                        }

                    </ul>
                    <a class="image-link" href="">
                        <img src="~/assets/images/products/@product.ProductColors?.FirstOrDefault()?.Image" alt="">
                    </a>
                    <a href="" class="product-title">@product.Title</a>
                    <div class="color-and-credit">
                        <div class="color-div">
                            <div class="item-colors">
                                @{
                                    @if (product.ProductColors != null && product.ProductColors.Count() > 0)
                                    {
                                        bool check = true;
                                        @foreach (ProductColor productColor in product.ProductColors.DistinctBy(c => c.ColorId))
                                        {
                                            <a asp-controller="product" asp-action="ChangeColor" asp-route-productColorId="@productColor.Id" class="color @(check ? "active" : "" ) " style="background-color: @productColor?.Color?.Code;"></a>
                                            check = false;
                                        }
                                    }
                                }
                            </div>
                            <p class="product-price"><strong>@product.Price</strong> <small>AZN</small></p>
                        </div>
                        @if (product.ProductLoanRanges != null && product.ProductLoanRanges.Count() > 0)
                        {
                            @if (product.ProductLoanRanges.Count() > 1)
                            {
                                <div class="credit-options">
                                    <div class="months">
                                        <ul class="d-flex">
                                            <li class="credit-item">
                                                @{
                                                    double interest1 = @product.ProductLoanRanges.MinBy(p => p.LoanRange.Range).InterestForStandartUsers;
                                                    double price1 = (product.DiscountedPrice > 0 ? product.DiscountedPrice : product.Price);
                                                    double range1 = @product.ProductLoanRanges.Min(p => p.LoanRange.Range);
                                                }

                                                <a class="productLoanRange p-0 m-0" data-id="@(Math.Ceiling((price1 + (price1*interest1/100)) / range1))">@range1 ay</a>
                                            </li>
                                            <li class="credit-item selected-credit">
                                                @{
                                                    double interest = @product.ProductLoanRanges.MaxBy(p => p.LoanRange.Range).InterestForStandartUsers;
                                                    double price = (product.DiscountedPrice > 0 ? product.DiscountedPrice : product.Price);
                                                    double range = @product.ProductLoanRanges.Max(p => p.LoanRange.Range);
                                                }
                                                <a class="productLoanRange p-0 m-0" data-id="@(Math.Ceiling((price + (price*interest/100)) / range))">@range ay</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="prices-for-months">
                                        <span><strong>@(Math.Ceiling((product.DiscountedPrice > 0 ? product.DiscountedPrice : product.Price) / 12))</strong> <small>AZN</small></span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="credit-options">
                                    <div class="months">
                                        <ul class="d-flex">
                                            <li class="credit-item selected-credit">
                                                @{
                                                    double interest2 = @product.ProductLoanRanges.First().InterestForStandartUsers;
                                                    double price2 = (product.DiscountedPrice > 0 ? product.DiscountedPrice : product.Price);
                                                    double range2 = @product.ProductLoanRanges.First().LoanRange.Range;
                                                }
                                                <a class="productLoanRange p-0 m-0" data-id="@(Math.Ceiling((price2 + (price2*interest2/100)) / range2))">@range2 ay</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="prices-for-months">
                                        <span><strong>@(Math.Ceiling((product.DiscountedPrice > 0 ? product.DiscountedPrice : product.Price) / 12))</strong> <small>AZN</small></span>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                    <a href="" class="buy buyoneclick">1 kliklə al</a>
                    <a href="" class="buy buycredit">Kredit</a>
                </div>
            </div>
        }
    }


</div>
<div class="pagination-center">
    <div class="pagination">
        @if (Model.Products.HasPrev)
        {
            <li>
                <a asp-controller="product" asp-action="filter" asp-route-pageIndex="@(Model.Products.PageIndex - 1)" class="single-btn prev-btn paginated-btn">
                    <i class="zmdi zmdi-chevron-left"></i>
                </a>
            </li>
        }
        @for (int i = Model.Products.StartPage; i <= Model.Products.EndPage; i++)
        {
            <li class="@(i == Model.Products.PageIndex ? "active" : "")"><a asp-controller="product" asp-action="filter" asp-route-pageIndex="@i" class="single-btn middle-btn paginated-btn">@i</a></li>
        }
        @if (Model.Products.HasNext)
        {
            <li>
                <a asp-controller="product" asp-action="filter" asp-route-pageIndex="@(Model.Products.PageIndex + 1)" class="single-btn next-btn paginated-btn">
                    <i class="zmdi zmdi-chevron-right"></i>
                </a>
            </li>
        }

    </div>
</div>