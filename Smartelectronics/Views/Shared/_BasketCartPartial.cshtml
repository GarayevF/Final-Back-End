<div class="basket-dropdown">
    <div class="basket-content-top">
        <p>Səbətdə @Model.Count() məhsulunuz var</p>
    </div>
    <div class="basket-content">
        <div class="content-cards-div">
            @if(Model != null && Model.Count() > 0)
            {
                @foreach (BasketVM basketVM in Model)
                {
                    <div class="basket-card">
                        <div class="basket-image-div">
                            <img class="basket-image" src="~/assets/images/@basketVM.Image" alt="">
                        </div>
                        <div class="basket-card-info">
                            <div class="basket-card-top">
                                <div class="basket-card-title">
                                    <p>@basketVM?.Brand?.Name</p>
                                    <span>@basketVM?.Title</span>
                                </div>
                                <a asp-action="deletebasket" asp-controller="basket" asp-route-id="@basketVM.Id" class="basket-card-delete-btn">
                                    <i class="fa-regular fa-trash-can"></i>
                                </a>
                            </div>
                            <div class="basket-card-bottom">
                                <p>Say : <small>@basketVM.Count</small></p>
                                <span>@(basketVM.Price * basketVM.Count) <small>AZN</small></span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="content-summary">
            <span>Toplam</span>
            <p>@(Model.Sum(b => b.Price * b.Count)) <small>AZN</small></p>
        </div>
        <div class="content-direction">
            <a href="#" class="basket-go-summary">Səbətə get</a>
            <button class="basket-checkout">Sifarişi Tamamla</button>
        </div>
    </div>
</div>