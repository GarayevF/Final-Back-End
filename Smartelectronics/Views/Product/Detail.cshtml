                                        <h6>Endirim</h6>
                                        <div class="price">
                                            <p>
                                                <span>200</span>AZN
                                            </p>
                                        </div>
                                    </div>
                                </li>
                                <li class="circle label-red">
                                    <div class="label">
                                        <p class="text-lg">24 ay</p>
                                        <p class="text-sm">Faizsiz Kredit</p>
                                    </div>
                                </li>
                                <li class="circle label-orange">
                                    <div class="label">
                                        <p class="text-lg">24 ay</p>
                                        <p class="text-sm">Faizsiz Kredit</p>
                                    </div>
                                </li>
                            </ul>
                            <div class="image-link-slider">
                                <div class="owl-carousel product-detail-slider">
                                    @if(Model.Product.ProductColors != null && Model.Product.ProductColors.Count() > 0)
                                    {
                                        @foreach (ProductColor productColor in Model.Product.ProductColors.Where(c => c.ColorId == Model.Product.ProductColors.First().ColorId))
                                        {
                                            <div class="product-slider-image">
                                                <img src="~/assets/images/products/@productColor.Image" alt="">
                                            </div>
                                        }
                                    } 
                                </div>

                            </div>
                            <div class="color-and-credit">
                                <h3 class="product-price">@Model.Product.Price<small>AZN</small></h3>
                                <div class="color-div">
                                    <div class="item-colors">
                                        @{
                                            bool checkColor = true;
                                            @if (Model.Product.ProductColors != null && Model.Product.ProductColors.Count() > 0)
                                            {
                                                @foreach (ProductColor productColor in Model.Product.ProductColors.DistinctBy(c => c.ColorId))
                                                {
                                                    <a asp-controller="product" asp-action="ChangeColorForSlider" asp-route-id="@productColor.ProductId" asp-route-colorId="@productColor.ColorId" class="colorSlider @(checkColor ? "active" : "") " style="background-color: @productColor.Color.Code;"></a>
                                                    checkColor = false;
                                                }
                                            }
                                            
                                        }
                                    </div>
                                </div>
                            </div>
                            <a href="" class="buy buyoneclick">1 kliklə al</a>
                        </div>
                    </div>
                    <div class="right">
                        <div class="title-wrapper">
                            <h6>Faizsiz Kredit Təklifi</h6>
                            <div class="delivery-label">
                                <div class="icon">
                                    <img src="/assets/images/truck.svg" alt="">
                                </div>
                                <p>Çatdırılma pulsuz</p>
                            </div>
                        </div>
                        @if(Model.LoanRanges != null && Model.LoanRanges.Count() > 0)
                        {
                            <div class="credit-suggestion">
                                <ul class="wrapper">
                                    <li class="li-title">
                                        <p class="title">Müddət</p>
                                        <p class="title">İlkin Ödəniş</p>
                                        <p class="title">Aylıq Ödəniş</p>
                                        <p class="title">Toplam Ödəniş</p>
                                    </li>
                                    @if (Model.IFLoanRanges != null && Model.IFLoanRanges.Count() > 0)
                                    {
                                        @foreach (ProductIFLoanRange productLoanRange in Model.IFLoanRanges.Where(a => a.LoanRange != null).OrderByDescending(a => a.LoanRange.Range))
                                        {
                                            <li style="position: relative;">
                                                <div class="block radio-wrapper">
                                                    <input type="radio" name="creditCondition" id="creditCondition-@count">
                                                    <label for="creditCondition-@count"></label>
                                                </div>
                                                <div class="price outline">
                                                    <p style="padding-left: 24px;">@productLoanRange.LoanRange.Range ay</p>
                                                </div>
                                                <div class="price">
                                                    <p>@productLoanRange.InitialPayment azn</p>
                                                </div>
                                                <div class="price">
                                                    <p>@productLoanRange.MonthlyPayment azn</p>
                                                </div>
                                                <div class="price">
                                                    <p>@productLoanRange.TotalPayment azn</p>
                                                </div>
                                            </li>
                                            count++;
                                        }
                                    }
                                    
                                    
                                </ul>
                            </div>
                        }
                        
                        <div class="credit-calculator">
                            <div class="title-wrapper">
                                <h6>KREDİT HESABLAYICI</h6>
                                <div class="toggle-checkbox">
                                    <input type="checkbox" id="edit_work_place">
                                    <label for="edit_work_place">
                                        <span class="on">VIP  MÜŞTƏRİ</span>
                                        <span class="off">STANDART MÜŞTƏRİ</span>
                                    </label>
                                </div>
                            </div>
                            <ul class="wrapper">
                                <li class="li-title">
                                    <p class="title">Müddət</p>
                                    <p class="title">İlkin Ödəniş</p>
                                    <p class="title">Aylıq Ödəniş</p>
                                    <p class="title">Toplam Ödəniş</p>
                                </li>
                                <li class="li-body">
                                    <div class="block radio-wrapper">
                                        <input type="radio" name="creditCondition" id="creditCondition-0">
                                        <label for="creditCondition-0"></label>
                                    </div>
                                    @if (Model.LoanRanges != null && Model.LoanRanges.Count() > 0)
                                    {
                                        <div class="price d-block">
                                            <div class="credit-month-select">
                                                <div class="dropdown">
                                                    <button class="dropbtn"><span>@Model?.LoanRanges?.OrderByDescending(a => a.LoanRange.Range).FirstOrDefault().LoanRange.Range</span> <i class="fa-solid fa-chevron-left"></i></button>
                                                    <div id="credit-dropdown" class="dropdown-content">
                                                        @foreach (ProductLoanRange productLoanRange in Model?.LoanRanges?.OrderByDescending(a => a.LoanRange.Range))
                                                        {
                                                            <a href="#">@productLoanRange.LoanRange.Range</a>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="price">
                                            <input type="number" class="pristine" value="0">
                                        </div>
                                        
                                            {
                                                double price = Model.Product.DiscountedPrice > 0 ? Model.Product.DiscountedPrice : Model.Product.Price;
                                            <div class="price outline">
                                                <p>
                                                    @(
                                                        (price / Model?.LoanRanges?.OrderByDescending(a => a.LoanRange.Range).FirstOrDefault().LoanRange.Range) + (price * Model?.Product?.ProductLoanRanges?.FirstOrDefault(a => a.ProductId == Model.Product.Id).LoanRange.Range) / Model?.LoanRanges?.OrderByDescending(a => a.LoanRange.Range).FirstOrDefault().LoanRange.Range) azn
                                                </p>
                                            </div>
                                            <div class="price outline">
                                                <span class="mob-title">Toplam Ödəniş</span>
                                                <p>@(price * Model?.LoanRanges?.OrderByDescending(a => a.LoanRange.Range).FirstOrDefault().LoanRange.Range) azn</p>
                                            </div>
                                            }
                                    }
                                </li>
                            </ul>
                        </div>
                        <div class="payment-btns">
                            <button class="payment-btn buy-cash-btn">Nağd al</button>
                            <button class="payment-btn buy-taksit-btn">Taksitlə al</button>
                            @if( (Model.Product.DiscountedPrice > 0 ? Model.Product.DiscountedPrice : Model.Product.Price) > 50)
                            {
                                <button class="payment-btn buy-credit-btn">Kreditlə al</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="specifications">
                <h4>TEXNİKİ XÜSUSİYYƏTLƏR</h4>
                <div class="specifications-main">
                    <div class="elements">
                        @if(Model.GroupedSpecificationsVMs != null && Model.GroupedSpecificationsVMs.Count() > 0)
                        {
                            @foreach (GroupedSpecificationsVM groupedSpecificationsVM in Model.GroupedSpecificationsVMs)
                            {
                                <div class="feature">
                                    <div class="feature-title">
                                        <div class="icon">
                                            @Html.Raw(groupedSpecificationsVM.GroupIcon)
                                        </div>
                                        <h6>@groupedSpecificationsVM.GroupName</h6>
                                    </div>
                                    @if(groupedSpecificationsVM?.Specifications != null && groupedSpecificationsVM?.Specifications.Count() > 0)
                                    {
                                        @foreach (SpecificationVM specification in groupedSpecificationsVM?.Specifications)
                                        {
                                            <div class="feature-body">
                                                <p>@specification?.Name</p>
                                                <p>@specification?.Value</p>
                                            </div>
                                        }
                                    }


                                </div>
                            }
                        }                    
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

