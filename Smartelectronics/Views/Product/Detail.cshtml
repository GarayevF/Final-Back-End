@model DetailVM
@{
    int count = 1;
    ViewData["Title"] = "Detail";
}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">Smart Electronics</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            @Model.Product.Category?.Parent?.Name
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index.html">@Model.Product?.Category?.Name</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index.html">@Model.Product?.Brand?.Name</a>
                    </li>
                    <li class="breadcrumb-item active">
                        @Model.Product?.Title
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<main class="main-detail">
    <div class="head">
        <div class="container">
            <div class="title">
                <div class="title-head">
                    <h1>@Model.Product?.Brand?.Name</h1>
                    <h1>@Model.Product?.Category.Name - @Model.Product?.Title</h1>
                </div>
                <div class="title-label">
                    <div class="owl-carousel owl-three">
                        @if(Model.Product.LoanTerms != null && Model.Product.LoanTerms.Count() > 0)
                        {
                            @foreach (LoanTerm loanTerm in Model.Product.LoanTerms)
                            {
                                <div class="owl-three-item" style="width: 450px;">
                                    <div class="item">
                                        <div class="icon">
                                            <img src="~/assets/images/@loanTerm.LoanCompany?.Logo" alt="">
                                        </div>
                                        <div class="content">
                                            <p>@loanTerm.LoanTermLoanRanges?.MaxBy(a => a.LoanRange.Range)?.LoanRange.Range ay x @((Model.Product.Price / (double)@loanTerm?.LoanTermLoanRanges?.MaxBy(a => a.LoanRange.Range)?.LoanRange.Range).ToString("N2")) AZN</p>
                                            <span>@loanTerm.Title</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

