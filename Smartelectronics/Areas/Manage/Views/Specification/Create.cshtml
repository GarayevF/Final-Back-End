@model Specification
@{
    ViewData["Title"] = "Create";
    IEnumerable<Specification> specifications = ViewBag.SpecificationGroups;

    SelectList selectList = new SelectList(specifications, nameof(Specification.Id), nameof(Specification.Name));
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-12">
                <h1 class="h3 mb-4 text-gray-800">Product Create Page</h1>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <form method="post" enctype="multipart/form-data">
            
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecificationGroupId"></label>
                <select asp-for="SpecificationGroupId" class="form-control" asp-items="@selectList">
                </select>
                <span asp-validation-for="SpecificationGroupId" class="text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationPartial")
}