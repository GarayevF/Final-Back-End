@model PageNatedList<Campaign>
@{
    ViewData["Title"] = "Index";
    int count = (Model.PageIndex - 1) * 3;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Kampaniyalar</h1>
            </div>
            <div class="col-lg-2" style="text-align: end">
                <a asp-area="manage" asp-controller="Campaign" asp-action="create" class="btn btn-primary">Create</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>%</th>
                    <th>Title</th>
                    <th>Created At</th>
                    <th>Created By</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Campaign campaign in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@campaign.Title</td>
                        <td>@campaign.Desc</td>
                        <td>@campaign.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                        <td>@campaign.CreatedBy</td>
                        <td>
                            <a asp-area="manage" asp-controller="campaign" asp-action="Update" asp-route-id="@campaign.Id" class="btn btn-warning">Update</a>
                            <a asp-area="manage" asp-controller="campaign" asp-action="Delete" asp-route-id="@campaign.Id" class="btn btn-danger deleteIndex">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.HasPrev)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="manage" asp-controller="campaign" asp-action="index"
                       asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
                    </li>
                }
                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")"><a class="page-link" asp-area="manage" asp-controller="campaign" asp-action="index" asp-route-pageIndex="@i">@i</a></li>
                }
                @if (Model.HasNext)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="manage" asp-controller="campaign" asp-action="index"
                       asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

