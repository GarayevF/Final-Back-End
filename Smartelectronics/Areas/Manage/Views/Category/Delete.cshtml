@model Category
@{
    ViewData["Title"] = "Delete";
    int count = 0;
    int childCount = 0;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Kateqoriya Silinməsi</h1>
            </div>
            <div class="col-lg-2" style="text-align: end">
                <a asp-area="manage" asp-controller="category" asp-action="index" class="btn btn-primary">Go to home</a>
            </div>

            <div class="col-lg-2" style="text-align: end">
                <a asp-area="manage" asp-controller="category" asp-action="deleteCategory" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card" style="width: 100%;">
            @if (string.IsNullOrWhiteSpace(Model.Icon))
            {
                @Html.Raw(Model.Icon);
            }
            <div class="card-body">
                <h5 class="card-title">Brand Name: @Model.Name</h5>
            </div>
        </div>
    </div>
    @if (Model.Products != null && Model.Children.Count() > 0)
    {
        <div class="col-lg-12">
            <h4>Children Categories</h4>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>%</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Created By</th>
                        <th>Product Count</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Category category in Model.Children)
                    {
                        childCount++;
                        <tr>
                            <td>@childCount</td>
                            <td>@category.Name</td>
                            <td>@category.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                            <td>@category.CreatedBy</td>
                            <td>@category.Products.Count()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    @if (Model.Children != null && Model.Products.Count() > 0)
    {
        <div class="col-lg-12">
            <h4>Products</h4>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>%</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@product.Title</td>
                            <td>@product.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                            <td>@product.CreatedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.js" integrity="sha512-8Z5++K1rB3U+USaLKG6oO8uWWBhdYsM3hmdirnOEWp8h2B1aOikj5zBzlXs8QOrvY9OxEnD2QDkbSKKpfqcIWw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(document).on('click', '.btn-danger', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Silmək istədiyinizdən əminsiniz?',
                    text: "Sildikdən sonra bərpa edilməyəcək!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Bəli, silinsin!'
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            fetch($(this).attr('href'))
                                .then(res => {
                                    return;
                                })
                                .then(() => {
                                    Swal.fire("Uğurla silindi!", {
                                        icon: "success",
                                    });
                                    location.reload();
                                });
                        } else {
                            Swal.fire("Silinmə əməliyyatı ləğv olundu!");
                        }
                    });
            });
        });
    </script>
}