@model Slider
@{
    ViewData["Title"] = "Create";
    
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-12">
                <h1 class="h3 mb-4 text-gray-800">Slayd Yaradılması</h1>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Link"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainFile"></label>
                <input asp-for="MainFile" accept="image/jpeg" class="form-control-file" />
                <span asp-validation-for="MainFile" class="text text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>
