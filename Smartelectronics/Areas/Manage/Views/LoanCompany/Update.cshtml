@model LoanCompany
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-12">
                <h1 class="h3 mb-4 text-gray-800">Kredit Ortaqları Məlumatlarının Yenilənməsi</h1>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoFile"></label>
                <input asp-for="LogoFile" accept="image/jpeg" class="form-control-file" />
                <span asp-validation-for="LogoFile" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LabelFile"></label>
                <input asp-for="LabelFile" accept="image/jpeg" class="form-control-file" />
                <span asp-validation-for="LabelFile" class="text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>
