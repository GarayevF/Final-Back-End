@model Affiliate
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-12">
                <h1 class="h3 mb-4 text-gray-800">Affiliate Update Page</h1>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Ad</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotline">Qaynar xətt</label>
                <input asp-for="Hotline" class="form-control" />
                <span asp-validation-for="Hotline" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number">Əlaqə Nömrəsi</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail">Mail</label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Adres</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

